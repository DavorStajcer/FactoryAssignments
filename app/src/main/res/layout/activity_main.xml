<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".changing_fragments.MainActivity">

    <TextView
        android:id="@+id/tvGameOverPoints"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:text="POINTS :"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvGameOverPointsResult"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:text="11"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="gone"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvGameOverPoints"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/arrowOnwards"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:visibility="gone"
        android:layout_marginTop="200dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGameOverPointsResult" />
    <ImageView
        android:id="@+id/previousResults"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_sd_storage_24"
        app:layout_constraintRight_toLeftOf="@id/arrowOnwards"
        app:layout_constraintTop_toBottomOf="@id/tvGameOverPoints" />

    <FrameLayout
        android:id="@+id/flFragments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

<LinearLayout
    android:id="@+id/buttonLayout"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_height="90dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <Button
        android:id="@+id/btnPastGames"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="SAVED GAMES"
        android:textSize="22sp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnChangeFragments"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="YAMB TICKET"
        android:textSize="22sp"
        android:layout_weight="1" />

</LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
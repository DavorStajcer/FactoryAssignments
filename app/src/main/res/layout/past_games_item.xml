<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_ahead_call_pressed"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pastGamesItem_Date"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="12.2.1998"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PastGamesItem_TotalPoints"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="POINTS : 1789"
        app:layout_constraintLeft_toRightOf="@id/pastGamesItem_Date"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>